<!--index.wxml-->
 <scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <header userInfo="{{userInfo}}" hasUserInfo="{{hasUserInfo}}"></header>
    <view class="content-wrap">
      <view class="remain-day">距离2026考研还剩{{remainDays}}天</view>
      <view class="cotent-text">
        <view class="header-banner-left" bindtap="goChapter">
          学习天数
						<view class="stat-value">{{totalStudyDays}}<text class="small-text">天</text></view>
            <!-- <image class="freeimg"  mode="aspectFit" src="cloud://cloud1-8gd6vytq5ac1936a.636c-cloud1-8gd6vytq5ac1936a-1347245059/image/自由动态.png" ></image> -->
        </view>    
        <view class="header-banner-right">
          整体进度
						<view class="stat-value">{{totalProgress}}<text class="small-text">%</text></view>
            <!-- <image class="chooseimg"  mode="aspectFit" src="cloud://cloud1-8gd6vytq5ac1936a.636c-cloud1-8gd6vytq5ac1936a-1347245059/image/选择.png" ></image> -->
        </view>
      </view>
      
      <!-- 数据同步状态 -->
      <view class="sync-status">
        <view class="sync-info">
          <text class="sync-label">同步状态：</text>
          <text class="sync-text">{{syncStatus}}</text>
        </view>
        <view class="sync-buttons">
          <button class="sync-btn" size="mini" bindtap="syncData">手动同步</button>
          <button class="sync-btn restore-btn" size="mini" bindtap="restoreData">恢复数据</button>
          <button class="sync-btn merge-btn" size="mini" bindtap="mergeData">合并数据</button>
        </view>
      </view>
    </view>

  </view>
  <view class="group-408">
    <view class="group-title high-math-title">线代</view>
    <view class="module-list">
      <view class="module-item" bindtap="goStuday" data-param="4">按章节自测</view>
       <view class="module-item" bindtap="goStuday" data-param="5">全部公式自测</view>
    </view>
    <view class="group-title high-math-title">高数</view>
    <view class="module-list">
      <view class="module-item" bindtap="goStuday" data-param="1">按章节自测</view>
      <view class="module-item" bindtap="goStuday" data-param="2">自测收藏</view>
      <view class="module-item" bindtap="goStuday" data-param="3">全部公式自测</view>
    </view>
    
  </view>

/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  background: #f7f8f9;
  flex: 1;
  overflow-y: hidden;
}
header {
  width: 100%;
}
.content-wrap{
  font-size: 32rpx;
  width: 90%;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.1);
  background: #ffffff;
  border-radius: 20rpx;
  margin-top: -80rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.remain-day{
  font-size: 30rpx;
  color: #ea7070;
  text-align: center;
  background-color: #f0f5ff;
}
.cotent-text{
  display: flex;
  padding: 20rpx;
  font-size: 12px;
}

.content-main{
  display: flex;
  margin-top: 30rpx;

}


.header-banner-left{
  flex: 1;
  text-align: center;
  color: #5702a8;
  border-right: 1px solid #eeeeee;
}
.header-banner-right{
  flex: 1;
  text-align: center;
  color: #5702a8;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  display: flex;
}
.persist-wrap{
  border-right: 1rpx solid #eeeeee;
}
.chooseimg{
  width: 58rpx;
  height: 58rpx;
}
.freeimg{
  width: 60rpx;
  height: 60rpx;
}

/* 统计值样式 */
.stat-value {
    font-size: 18px;
    font-weight: bold;
}
.small-text {
  font-size: 12px;
}

/* 数据同步状态样式 */
.sync-status {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.sync-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.sync-label {
  font-size: 24rpx;
  color: #666;
}

.sync-text {
  font-size: 24rpx;
  color: #5702a8;
  font-weight: bold;
}

.sync-buttons {
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
}

.sync-btn {
  flex: 1;
  font-size: 22rpx !important;
  background-color: #5702a8 !important;
  color: white !important;
  border-radius: 20rpx !important;
  border: none !important;
  padding: 8rpx 0 !important;
}

.sync-btn:active {
  background-color: #4a0290 !important;
}

.restore-btn {
  background-color: #ff9800 !important;
}

.restore-btn:active {
  background-color: #f57c00 !important;
}

.merge-btn {
  background-color: #4caf50 !important;
}

.merge-btn:active {
  background-color: #388e3c !important;
}

.group-408 {
  width: 92%;
  margin: 0 auto;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
}
.high-math-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7d46b2;
  margin: 30rpx 20rpx 30rpx;
  padding-left: 15rpx;
  border-left: 6rpx solid #7d46b2;
  position: relative;
}

.high-math-title::after {
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(90deg, #7d46b2, transparent);
}
/* 408计算机标题样式 */
.cs-408-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7d46b2;
  margin: 40rpx 20rpx 20rpx;
  text-align: center;
  position: relative;
  padding: 10rpx 0;
}

.cs-408-title::before,
.cs-408-title::after {
  content: "";
  position: absolute;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #7d46b2, transparent);
  width: 30%;
  top: 50%;
}

.cs-408-title::before {
  left: 0;
}

.cs-408-title::after {
  right: 0;
}

.cs-408-title span {
  padding: 8rpx 25rpx;
}

.module-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.module-item {
  width: 48%;
  padding: 20rpx 0;
  background-color: #f0f0f5;
  color: #5702a8;
  font-size: 28rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.module-item:active {
  background-color: #e0e0e5;
}

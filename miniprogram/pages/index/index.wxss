/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  background: #f7f8f9;
  flex: 1;
  overflow-y: hidden;
}
header {
  width: 100%;
}
.content-wrap{
  font-size: 32rpx;
  width: 90%;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.1);
  background: #ffffff;
  border-radius: 20rpx;
  margin-top: -80rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
/* 公告样式 */
.announcement {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.announcement-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.announcement-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
}

.announcement-arrow {
  font-size: 28rpx;
  margin-left: 15rpx;
}

/* 邀请好友部分样式 */
.invite-section {
  background: linear-gradient(135deg, #5702a8 0%, #7d46b2 100%);
  color: white;
  padding: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.3s ease;
}

.invite-section:active {
  transform: scale(0.98);
}

.invite-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.invite-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.invite-text {
  display: flex;
  flex-direction: column;
}

.invite-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.invite-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.invite-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stats-points {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.remain-day{
  font-size: 30rpx;
  color: #ea7070;
  text-align: center;
  background-color: #f0f5ff;
}
.cotent-text{
  display: flex;
  padding: 20rpx;
  font-size: 12px;
}

.content-main{
  display: flex;
  margin-top: 30rpx;

}


.header-banner-left{
  flex: 1;
  text-align: center;
  color: #5702a8;
  border-right: 1px solid #eeeeee;
}
.header-banner-right{
  flex: 1;
  text-align: center;
  color: #5702a8;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  display: flex;
}
.persist-wrap{
  border-right: 1rpx solid #eeeeee;
}
.chooseimg{
  width: 58rpx;
  height: 58rpx;
}
.freeimg{
  width: 60rpx;
  height: 60rpx;
}

/* 统计值样式 */
.stat-value {
    font-size: 18px;
    font-weight: bold;
}
.small-text {
  font-size: 12px;
}

.sync-label {
  font-size: 24rpx;
  color: #666;
}

.sync-text {
  font-size: 24rpx;
  color: #5702a8;
  font-weight: bold;
}

.group-408 {
  width: 92%;
  margin: 20rpx auto;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
}
.high-math-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7d46b2;
  margin: 30rpx 20rpx 30rpx;
  padding-left: 15rpx;
  border-left: 6rpx solid #7d46b2;
  position: relative;
}

.high-math-title::after {
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(90deg, #7d46b2, transparent);
}
/* 408计算机标题样式 */
.cs-408-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #7d46b2;
  margin: 0rpx 20rpx 20rpx;
  text-align: center;
  position: relative;
  padding: 10rpx 0;
}

.cs-408-title::before,
.cs-408-title::after {
  content: "";
  position: absolute;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #7d46b2, transparent);
  width: 30%;
  top: 50%;
}

.cs-408-title::before {
  left: 0;
}

.cs-408-title::after {
  right: 0;
}

.cs-408-title span {
  padding: 8rpx 25rpx;
}

.module-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.module-item {
  width: 48%;
  padding: 20rpx 0;
  background-color: #f0f0f5;
  color: #5702a8;
  font-size: 28rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.module-item:active {
  background-color: #e0e0e5;
}

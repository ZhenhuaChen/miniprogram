.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 积分显示 */
.points-header {
  width: 100%;
  margin-bottom: 30rpx;
}

.points-card {
  background: linear-gradient(135deg, #5702a8 0%, #7d46b2 100%);
  border-radius: 20rpx;
  padding: 0rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
}

.points-number {
  font-size: 72rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.points-label {
  font-size: 32rpx;
  opacity: 0.9;
}

.tip-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 资源列表 */
.resources-section {
  width: 80vw;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.resources-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.resource-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.resource-item:active {
  border-color: #5702a8;
  transform: scale(0.98);
}

.resource-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 80rpx;
  text-align: center;
}

.resource-content {
  flex: 1;
}

.resource-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.resource-action {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.resource-points {
  font-size: 26rpx;
  color: #5702a8;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.download-btn {
  font-size: 24rpx;
  color: #5702a8;
  background: rgba(87, 2, 168, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.downloaded-tag {
  font-size: 24rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.disabled-btn {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 90%;
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 40rpx;
}

.resource-preview {
  text-align: center;
}

.preview-icon {
  display: block;
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.preview-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.preview-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.preview-cost {
  display: block;
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
  border: none;
  background: transparent;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}

.confirm-btn {
  color: #5702a8;
  font-weight: bold;
}

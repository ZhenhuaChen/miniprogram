/* pages/contact/contact.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-top: 15rpx;
}

.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.qrcode {
  width: 400rpx;
  height: 400rpx;
  border: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #888;
}

.contact-info {
  width: 100%;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #555;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.contact-btn {
  width: 80%;
  background-color: #5702a8;
  color: white;
  margin-top: 30rpx;
}
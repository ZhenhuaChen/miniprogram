<!-- pages/contact/contact.wxml -->
<view class="container">
  <view class="header">
    <text class="title">联系我</text>
    <text class="subtitle">有任何需求或问题，请随时联系</text>
  </view>

  <view class="qrcode-section">
    <image class="qrcode" src="/images/contact.jpg" mode="aspectFit"></image>
    <text class="tip-text">扫码关注公众号联系我(截图识别二维码)</text>
  </view>

  <view class="contact-info">
    <view class="info-item">
      <image class="icon" src="cloud://cloud1-8gd6vytq5ac1936a.636c-cloud1-8gd6vytq5ac1936a-1347245059/image/bug.png"></image>
      <text>提BUG：公众号留言或直接发送问题描述</text>
    </view>
    <view class="info-item">
      <image class="icon" src="cloud://cloud1-8gd6vytq5ac1936a.636c-cloud1-8gd6vytq5ac1936a-1347245059/image/找需求.png"></image>
      <text>提需求：描述你想要的小工具</text>
    </view>
  </view>

  <button class="contact-btn" bindtap="copyWechat">复制公众号名称</button>
</view>
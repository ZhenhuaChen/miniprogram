.form-wrap{
    margin: auto;
    width: 90vw;
    font-size: 26rpx;
}
.form-item {
  margin-bottom: 24rpx;
  flex: 1;
}
input, textarea {
  width: 90%;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 26rpx;
  margin-top: 8rpx;
}
button {
  margin-right: 16rpx;
  margin-top: 16rpx;
}
.preview-area {
  margin-top: 32rpx;
  width: 90vw;
  background: #f8f8f8;
  padding: 16rpx;
  border-radius: 8rpx;
} 
.form-tip {
  font-size: 26rpx;
  color: #8931dc;
  margin: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.copy-btn {
  margin-left: 16rpx;
  padding: 0 12rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 20rpx !important;
  border: 1px solid #8931dc;
  color: #8931dc;
  background: #f8f8ff;
  border-radius: 8rpx;
}
.iconfont.icon-copy {
  font-style: normal;
  margin-right: 4rpx;
}
.error-text {
  color: #e74c3c;
  font-size: 24rpx;
  margin: 8rpx 0 0 0;
  display: block;
}
.modal-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 48rpx 32rpx 32rpx 32rpx;
  min-width: 400rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-title {
  font-size: 32rpx;
  color: #5702a8;
  margin-bottom: 32rpx;
  font-weight: bold;
}
.modal-btn {
  width: 220rpx;
  height: 64rpx;
  font-size: 28rpx;
  background: #5702a8;
  color: #fff;
  border-radius: 8rpx;
  margin-top: 8rpx;
}
.all-custom-btn-wrap{
  width: 96vw;
  text-align: right;
}
.all-custom-btn {
  width: auto;
  color: #5702a8;
  font-size: 30rpx;
  display: inline-block;
  text-align: left;
  padding: 0;
  text-decoration: underline;
}